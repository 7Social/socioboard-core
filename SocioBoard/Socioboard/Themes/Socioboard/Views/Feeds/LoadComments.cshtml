@{
    Layout = null;
    List<Domain.Socioboard.MongoDomain.FbPostComment> lstGroupProfiles = Model;
}

@if (lstGroupProfiles != null)
{
    <div class="panel-body">

        <ul class="chat">
            @foreach (var item in lstGroupProfiles)
            {
            <li class="left clearfix">
                <span class="chat-img pull-left">
                    <img src="http://graph.facebook.com/@item.FromId/picture?type=small" alt="User Avatar" class="img-circle">
                </span>
                <div class="chat-body clearfix">
                    <div class="">
                        <strong class="primary-font">@item.FromName</strong>
                        <small class="pull-right text-muted">
                            <i class="fa fa-clock-o fa-fw"></i> @item.Commentdate
                        </small>
                    </div>
                    <p>
                        @item.Comment
                    </p>
                </div>
            </li>
            }


        </ul>
        </div>
        }

