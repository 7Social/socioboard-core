                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel-body">
                                            <p>@item.ShareMessage</p>
                                        </div>
                                        <div class="panel-footer">
                                           @* <a href="#">
                                                <span class="pull-left">View Details</span></a>*@
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                        }
                                        catch { }
                                        sorteddatacount++;
                                    }
                                }
                                else
                                {
                                    
                                }
                        }
                        catch{}
                        
                    }
