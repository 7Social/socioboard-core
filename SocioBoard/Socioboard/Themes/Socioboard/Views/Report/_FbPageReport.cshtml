@using Domain.Socioboard.Domain;
@{
    string path = System.Configuration.ConfigurationManager.AppSettings["domain"];
    bool check = true;
    int i = 0;
    List<FbPagePost> _FbPagePost = (List<FbPagePost>)Model;
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#example1').dataTable();
    });

</script>


<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">FB Page Reports</h2>
    </div>

</div>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-users fa-fw"></i>


            <strong>INTER REPORT</strong> <span>Facebook Page Posts</span>

        </div>
        <!-- /.panel-heading -->


    </div>
    <!-- /.panel -->
</div>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Post Details
                <span class="pull-right"><a href="../Report/Export?pageid=@_FbPagePost[0].PageId"> Export to Excel</a></span>       
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">

                <table class="table table-striped table-bordered table-hover" id="example1">
                    <thead>

                        <tr>
                            <th>Published
                            </th>
                            <th>Post
                            </th>
                            <th>Type
                            </th>
                            <th>Like
                            </th>
                            <th>Comment
                            </th>
                            <th>Share
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in _FbPagePost)
                        {
                            
                            <tr>
                                <td class="sorting_1">@item.PostDate</td>
                                <td class=" ">
                                    <img class="commentsmallsz" src="@item.PictureUrl">
                                    <a href="#"><span class="commentmargin" onclick="getfacebookpostcomment('@item.Id')">@item.Post</span></a>
                                </td>
                                <td class=" ">@item.Type</td>
                                <td class="center ">@item.Likes</td>
                                <td class="center ">@item.Comments</td>
                                <td class="center ">@item.Shares</td>
                            </tr>
                            }
                        



                    </tbody>
                </table>


            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>


